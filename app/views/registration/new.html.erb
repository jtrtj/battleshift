<%= form_for @user do |f| %>
  <%= f.label "Email" %>
  <%= text_field (:email) %>
  <%= f.label "Name" %>
  <%= text_field (:name) %>
  <%= f.label "Password" %>
  <%= text_field (:password) %>
  <%= f.label "Confirm Password" %>
  <%= text_field (:password_confirmation) %>
  <%= f.submit %>
<% end %>